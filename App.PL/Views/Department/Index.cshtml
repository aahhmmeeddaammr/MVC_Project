@model IEnumerable<DepartmentViewModel>;
@{
	ViewData["Title"] = "Index";
}
<a asp-action="Create" class="btn btn-info my-5">Create New Department</a>
@if (Model.Count() == 0)
{
		 <p class="alert alert-danger ">There is No Departments</p>
}
else
{
		<h1 class="my-3 text-center">All Departments</h1>

					<table class="table table-bordered table-striped text-center">
			<thead class="bg-dark text-white">
				<tr>
					<th>@Html.DisplayNameFor(e => e.ID)</th>
					<th>@Html.DisplayNameFor(e => e.Name)</th>
					<th>@Html.DisplayNameFor(e => e.Code)</th>
					<th>@Html.DisplayNameFor(e => e.DateOfCreation)</th>
					<th>Delete</th>
					<th>Update</th>
					<th>Details</th>
				</tr>
			</thead>
			<tbody>
			@foreach (var department in Model)
			{
							<tr class="Department" data-id="@department.ID">
								<td>@department.ID</td>
								<td>@department.Name</td>
								<td>@department.Code</td>
									<td>@department.DateOfCreation.Year / @department.DateOfCreation.Month / @department.DateOfCreation.Day at @department.DateOfCreation.Hour :@department.DateOfCreation.Minute :@department.DateOfCreation.Second</td>
							<partial name="_ButtonsPartial" model="@department.ID"></partial>
		</tr>
			}
		</tbody>


	</table>

}

