@model Department;
@{
    ViewData["Title"] = "Create";
}

<h1 class="my-3 text-center">Create New Department</h1>
<div  asp-validation-summary="ModelOnly">
</div>
<form asp-action="Create" >
<div >
    <label asp-for="Name">Name *:</label>
    <input class="form-control my-3" type="type" asp-for="Name"   />
    <label asp-for="Code">Code *:</label>
    <input class="form-control my-3" type="type" asp-for="Code" />
    <input type="submit" class="btn btn-dark text-white" value="Create"></input>
    <a  class="btn btn-danger " asp-action="Index">Cancel</a>
</div>    
</form>