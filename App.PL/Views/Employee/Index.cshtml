@model IEnumerable<Employee>;
@{
	ViewData["Title"] = "Index";
}

<a asp-action="Create" class="btn btn-info my-5">Add New Employee</a>
@if (Model.Count() == 0)
{
					 <p class="alert alert-danger ">There is No Employees</p>
}
else
{
					<h1 class="my-3 text-center">All Employees</h1>

				<table class="table table-bordered table-striped text-center">
				<thead class="bg-dark text-white">
					<tr>
						<th>@Html.DisplayNameFor(e => e.ID)</th>
						<th>@Html.DisplayNameFor(e => e.Name)</th>
						<th>@Html.DisplayNameFor(e => e.Address)</th>
						<th>@Html.DisplayNameFor(e => e.CreationDate)</th>
						<th>@Html.DisplayNameFor(e => e.IsActive)</th>
						<th>@Html.DisplayNameFor(e => e.Age)</th>
						<th>Delete</th>
						<th>Update</th>
						<th>Details</th>
					</tr>
				</thead>
				<tbody>
			@foreach (var employee in Model)
			{
								<tr>
									<td>@employee.ID</td>
									<td>@employee.Name</td>
									<td>@employee.Address</td>
									<td>@employee.CreationDate.Year / @employee.CreationDate.Month / @employee.CreationDate.Day at @employee.CreationDate.Hour :@employee.CreationDate.Minute :@employee.CreationDate.Second</td>
									<td>
						@if (@employee.IsActive)
						{
										<p class="bg-success rounded ">@employee.IsActive
										</p>
						}
						else
						{
										<p class="bg-danger rounded ">@employee.IsActive</p>

						}
											</td>
									<td>@employee.Age</td>
									<partial name="_ButtonsPartial" model="@employee.ID"></partial>
								</tr>
			}
					</tbody>


				</table>

}
