@model IEnumerable<UserViewModel>;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a asp-action="Create" class="btn btn-info my-5">Add New User</a>
@if (Model.Count() == 0)
{
						 <p class="alert alert-danger ">There is No Users</p>
}
else
{
		<form asp-action="Index" >
				<input  type="text" class="form-control my-4" id="input" name="email" />
			<input type="submit" value="submit" class="btn btn-danger"/>
		</form>
	<h1 class="my-3 text-center">All Users</h1>

					<table class="table table-bordered table-striped text-center">
					<thead class="bg-dark text-white">
						<tr>
							<th>@Html.DisplayNameFor(e =>e.Id)</th>
							<th>@Html.DisplayNameFor(e => e.Email)</th>
							<th>@Html.DisplayNameFor(e => e.FullName)</th>
							<th>@Html.DisplayNameFor(e => e.Roles)</th>
							<th>Delete</th>
							<th>Update</th>
							<th>Details</th>
						</tr>
					</thead>
					<tbody>
			@foreach (var User in Model)
			{
										<tr>
											<td>@User.Id</td>
											<td>@User.Email</td>
											<td>@User.FullName</td>
											<td>@string.Join(" " , User.Roles)</td>
											<partial name="_ButtonsPartial" model="@User.Id"></partial>
										</tr>
			}
						</tbody>


					</table>

}